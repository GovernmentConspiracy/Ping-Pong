/**
 * Write a description of class Ball here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
public class Ball extends JComponent implements KeyListener
{
    private Rectangle rect;
    private Rectangle playerRect;
    private int rectX = 10;
    private int rectY = 10;
    private int rectW = 10;
    private int rectH = 30;
    private int x = 1;
    private int y = 101;
    private final int width = 27;
    private final int height = 27;
    private boolean right = true;
    private boolean up = true;
    private int moveByY = 0;
    private int moveByX = 0;
    
    public Ball()
    {
        rect = new Rectangle(x,y,width,height);
        playerRect = new Rectangle(rectX,rectY,rectW,rectH);
    }
    
    public void paintComponent (Graphics g)
    {
        Graphics2D g2 = (Graphics2D)g;
        g2.draw(rect);
        g2.draw(playerRect);
    }
    
    public void moveByRect()
    {
        playerRect.translate(moveByX,moveByY);
        repaint();
    }
    
    public void keyPressed(KeyEvent e)
    {
        int key = e.getKeyCode();
        
        if(key == KeyEvent.VK_UP)
        {
            moveByY = -10;            
        }
        if(key == KeyEvent.VK_DOWN)
        {
            moveByY = 10;            
        }
        moveByRect();
    }
    
    public void keyReleased(KeyEvent e)
    {
        moveByX = 0;
        moveByY = 0;
        moveByRect();
    }
    
    public void keyTyped(KeyEvent e)
    {
    }
    
    public void moveBy (int xx, int yy)
    {
        if (right == false)
        {
            xx = -xx;
        }
        if (up == true)
        {
            yy = -yy;
        }
        rect.translate(xx,yy);
        repaint();
    }
    
    public void setBoolean()
    {
        right = !right;
    }
    
    public void setUpBoolean()
    {
        up = !up;
    }
    
    public int xCoord()
    {
        if (right)
        {
            return (int)rect.x + width;
        }
        else
        {
            return (int)rect.x;
        }
    }
    
    public int yCoord()
    {
        if (up)
        {
            return (int)rect.y;
        }
        else
        {
            return (int)rect.y + height;
        }
    }
    
    public void checkBounds(int fHeight, int fWidth)
    {
        if (yCoord() + 27 >= fHeight || yCoord() == 0)
        {
            setUpBoolean();
        }
        if (xCoord() + 7 >= fWidth || xCoord() == 0)
        {
            setBoolean();
        }
    }
    
    /**
     * This should be in a different class, so that everything can be added.
     */
    public static void main (String args[])
    {
        JFrame frame = new JFrame();
        frame.setSize(600,600);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Ball circle = new Ball();
        frame.add(circle);
        frame.setVisible(true);
        
        Ball playerRect = new Ball();
        frame.add(playerRect);
        frame.setVisible(true);
        frame.addKeyListener(playerRect);
        
        class TimerListener implements ActionListener
        {
            public void actionPerformed(ActionEvent event)
            {
                circle.checkBounds(frame.getHeight(), frame.getWidth());
                circle.moveBy(1,1);
            }
        }
        
        ActionListener listener = new TimerListener();
        Timer t = new Timer(1, listener);
        t.start();
    }
}
