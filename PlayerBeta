import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import javax.swing.KeyStroke;
public class Player
{
    private Rectangle square;
    private int x = 1; //change to xposition of paddle
    private int y = 101; //change to middle of screen
    private final int width = 100; //change
    private final int height = 100; //change
    private int rate; //determine
    private boolean upY = true;
    private boolean canContinue = true;
    public Player()
    {
        square = new Rectangle(x,y,width,height);
    }
    
    public void paintComponent(Graphics g)
    {
        Graphics2D g2 = (Graphics2D)g;
        g2.draw(square);
    }
    
    public int yCoordinate()
    {
        if (upY)
        {
            return square.y;
        }
        else
        {
            return square.y + height;
        }
    }
    
    public void checkYBounds()
    {
        if (yCoordinate() >= 600 || yCoordinate()== 0)
        {
            canContinue = false;
        }
        else
        {
            canContinue = true;
        }
    }
}
